<body>
      <%- include('../../partials/admin/header.ejs')%>
      <section id="mid">
        <div class="container">
            <div class="row align-items-center">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-3  "></div>
                    <div class="col-md-4 ">
                        <h3>Change Password Here</h3>
                        <form action="/admin/adminchangepass" method="post">
                            <div class="form-floating">
                            <input type="password" name="cpass" id="" class="form-control form-control-sm" placeholder="Enter current pasword " required>
                            <label for="">Enter current pasword </label>
                        </div>
                        <div class="form-floating mt-2">
                            <input type="password" name="npass" id="" class="form-control form-control-sm" placeholder="Enter new pasword " required>
                            <label for="">Enter new pasword </label>
                        </div>
                        <small><%=mess%></small>
                        <button type="submit" class="btn btn-success form-control mt-2">Change Password</button>
                        </form>
                    </div>
                    <div class="col-md-2"></div>
                
            </div>
        </div>
      </section>
      <%- include('../../partials/admin/footer.ejs')%>


</body>
</html>