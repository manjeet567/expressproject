<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Explora&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/admin/css/style.css">
      </head>
<body>
      <%- include('../../partials/admin/header.ejs')%>
      <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <div class="table-responsive-md">
                    <table class="table table-hover">
                        <tr>
                            <td>Total Testinominals: <%=totaltesti%></td>
                            <td>Publish: <%=publish%></td>
                            <td>unpublish: <%=unpublish%></td>
                        </tr>
                    </table>
                    <h2>Testinominals Management</h2>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Posted Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.name%></td>
                                <td><%=result.desc%></td>
                                <td><img style="width: 70px;" src="/upload/<%=result.img%>" alt=""></td>
                                <td><%=result.posteddate%></td>
                                <%if(result.status=='unpublish'){%>
                                <td><a href="/admin/testiupdate/<%=result.id%>"><button style="width: 100px;" class="btn btn-danger"><%=result.status%></button></a></td>
                                <%}else{%>
                                <td><a href="/admin/testiupdate/<%=result.id%>"><button style="width: 100px;" class="btn btn-success"><%=result.status%></button></a></td>
                                <%}%>
                                <td><a href="/admin/testidelete/<%=result.id%>"><i style="font-size: 25px;text-decoration: none;color: black;" class="bi bi-trash"></i></a></td>
                            </tr>
                        <%})%>
                        <%if(!record.length){%>
                            <tr>
                                <td colspan="7" class="text-center"><h2>No Record Found</h2></td>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
      </section>
      <%- include('../../partials/admin/footer.ejs')%>


</body>
</html>