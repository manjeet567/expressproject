<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Explora&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
</head>

<body>

 <%-include('../partials/header.ejs')%>

  <section id="banner">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h2><%=bannerrecord.title%></h2>
          <p><%=bannerrecord.desc%></p>
            <a href="/banner"><button>More Detail...</button></a>
          </button>
        </div>
        <div class="col-md-4 ">
          <img src="/upload/<%=bannerrecord.img%>" alt="" class="img-fluid d-block mx-auto"
            id="banner-img">
        </div>
      </div>
    </div>
    <img src="media/border banner.png" alt="">
  </section>

  <section id="services">
    <h2>Services</h2>
    <div class="container">
      <div class="row">
        <%servicerecord.forEach((result)=>{%>
          <div class="col-md-4">
            <img src="/upload/<%=result.img%>" alt="">
            <h4><%=result.name%></h4>
            <p><%=result.desc%></p>
            <a href="/servicepage/<%=result.id%>"><button class="btn btn-success">More details</button></a>
          </div>
        <%})%>

      </div>
    </div>
  </section>

  <section id="testi">
    <div class="container">
      <h2>Testinominals</h2>
      <div class="row">
        <%testirecord.forEach((result)=>{%>
          <div class="col-md-3">
            <img src="/upload/<%=result.img%>"alt="">
            <p><span><i class="bi bi-quote"></i></span> <%=result.desc%> <span><i
                  class="bi bi-quote"></i></span></p>
            <p><%=result.name%></p>
          </div>
        <%})%>


      </div>
    </div>
  </section>
  <%-include('../partials/footer.ejs')%>
  
  <a href="#header"><i class="bi bi-arrow-up-circle" id="a1"></i></a>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>